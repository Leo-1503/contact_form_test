{% extends 'base.html.twig' %}

{% block title %}Formulaire de contact Acseo{% endblock %}

{% block body %}

    <div class="container">
        <a class="button_admin" href="{{path('app_login')}}">Admin</a>
        <div class="shadow p-5 rounded col-9 mx-auto mt-5">
            <div class="p-5 background_form">
                <h1>Bienvenue chez Acseo</h1>
                <h2>Formulaire de Contact</h2>
            </div>

            <p class="mt-3">Merci de nous laisser vos questions, commentaires ou suggestions en compl√©tant le formulaire</p>

            {% for notification in app.flashes('notice')%}
                <div class="container alert alert-success alert-dismissible fade show" role="alert">
                    {{ notification }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {{ form(form) }}
        </div>

    </div>

{% endblock %}
